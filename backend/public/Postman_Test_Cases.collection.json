    {
      "name": "ðŸ” Auth",
      "item": [
        {
          "name": "Register - Valid",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": "{{baseUrl}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{random_username}}\",\n  \"password\": \"{{random_password}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Generate random username/password for register",
                  "const ts = Date.now();",
                  "const uname = `stu_${ts}`;",
                  "const pwd = `Pw${(ts % 1000000).toString().padStart(6,'0')}`;",
                  "pm.environment.set('random_username', uname);",
                  "pm.environment.set('random_password', pwd);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Created 201 or OK 200', function () { pm.expect([200,201]).to.include(pm.response.code); });",
                  "let json; try { json = pm.response.json(); } catch (e) { json = {}; }",
                  "pm.test('Has user id/username', function(){ pm.expect(json).to.be.an('object'); });",
                  "pm.environment.set('userId', (json.data && json.data._id) || pm.environment.get('userId') || '');"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Register - Duplicate Username",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": "{{baseUrl}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"stu_102220200\",\n  \"password\": \"123456\"\n}"
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Use last random_username to force duplicate",
                  "const uname = pm.environment.get('random_username') || `dup_${Date.now()}`;",
                  "pm.environment.set('random_username', uname);",
                  "pm.request.body.update(JSON.stringify({ username: uname, password: '123456' }, null, 2));"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Duplicate -> 400/409', function () { pm.expect([400,409]).to.include(pm.response.code); });",
                  "let json; try { json = pm.response.json(); } catch(e){ json = {}; }",
                  "pm.test('Has error message', function(){ pm.expect(json).to.be.an('object'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
