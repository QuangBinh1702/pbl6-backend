              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Created 201 or OK 200', function () { pm.expect([200,201]).to.include(pm.response.code); });",
                  "var data = pm.response.json();",
                  "pm.test('Response object', function(){ pm.expect(data).to.be.an('object'); });",
                  "if (data && data.data && data.data._id) { pm.collectionVariables.set('userId', data.data._id); pm.environment.set('userId', data.data._id); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
